<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.lease.web.app.mapper.BrowsingHistoryMapper">

    <resultMap id="HistoryItemVo" type="com.atguigu.lease.web.app.vo.history.HistoryItemVo" autoMapping="true">
        <id property="id" column="id"></id>

<!--        因为roomId字段被映射到roomGraphVoList上了，所以需要给HistoryItemVo也整一个roomId的映射-->
        <result column="room_id" property="roomId" ></result>
        <collection property="roomGraphVoList" ofType="com.atguigu.lease.web.app.vo.graph.GraphVo" select="selectGraphListByRoomId" column="room_id">
        </collection>
    </resultMap>

    <select id="pageItemByUserId" resultMap="HistoryItemVo">
        select bh.id,
               bh.user_id,
               bh.room_id,
               bh.browse_time,
               ri.room_number,
               ri.rent,
               ai.name,
               ai.district_name,
               ai.city_name,
               ai.province_name
        from browsing_history as bh
                 left join room_info as ri
                           on bh.room_id = ri.id
                               and ri.is_deleted = 0
                 left join apartment_info as ai
                           on ri.apartment_id = ai.id
                               and ai.is_deleted = 0
        where bh.is_deleted = 0
          and bh.user_id = #{userId}
        order by bh.browse_time DESC

    </select>
    
    
    <select id="selectGraphListByRoomId" resultType="com.atguigu.lease.web.app.vo.graph.GraphVo">
        select
            name,
            url
        from graph_info
        where is_deleted=0
        and item_type=2
        and item_id=#{room_id}
    </select>
</mapper>
